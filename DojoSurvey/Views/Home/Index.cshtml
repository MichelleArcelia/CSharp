<body>

    <form style="margin-top: 70px"action="result" method="POST">
        <table>
            <tr>
                <th></th>
                <th></th>
            </tr>

            <tr>
                <td><h6>Your Name:</h6></td>
                <td><input type="text" name="name" id=""></td>
            </tr>
            <tr>
                <td><h6>Dojo Location:</h6></td>
                <td><select name="location" style="width: 168px; font-size: 14px;" >
                    <option value="Chicago" >Chicago</option>
                    <option value="LA">LA</option>
                    <option value="New York">New York</option>
                    <option value="Moline">Moline</option>
                </select>
                </td>
            </tr>
            <tr>
                <td><h6>Favorite Language:</h6></td>
                <td><select name="language" style="width: 168px; font-size: 14px;" >
                    <option value="MEAN">MEAN</option>
                    <option value="Python">Python</option>
                    <option value="C#">C#</option>
                </select></td>
            </tr>
            <tr>
                <td><h6>Comment (optional):</h6></td>
            </tr>
        </table>
        <textarea class="textarea" name="textarea" id="" cols="50" rows="5"></textarea><br>
        <input class="button" type="submit" value="Submit" >
